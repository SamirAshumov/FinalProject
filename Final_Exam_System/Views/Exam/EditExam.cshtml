@model Exam
@{
    ViewData["Title"] = "Edit";
}
<form asp-controller="Exam" asp-action="EditExam">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Edit The Exam
            </h2>
            <hr />
        </div>
        <div class="mb-3">
            <input asp-for="ExamId" hidden/>

            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />

            <label asp-for="Duration"></label>
            <input asp-for="Duration" class="form-control" />

            <input asp-for="AddedAt" hidden/>
            <input asp-for="StartTime" hidden/>
            <input asp-for="EndTime" hidden/>

            <input asp-for="ApplicationUserId" hidden/>

            


        </div>
        <button type="submit" class="btn btn-primary" >Save</button>
        <a asp-action="Index" asp-controller="Exam" class="btn btn-secondary">
            back to Exams
        </a>
    </div>
</form>